.menu {
  display: block;
  line-height: 1.5em;
  text-decoration: none;
  white-space: nowrap;
}

.menu ul {
  list-style-type: none;
  padding: 0em;
  margin: 0em;
}

.menu a:hover,
.menu a:focus,
.menu a:active,
.menu a:visited {
  border-color: transparent;
}
.menu li {
  margin: 0;
  padding: 0.5em;
  transition: background-color 0.2s ease-in-out;
  a {
    transition: color 0.2s ease-in-out;
  }
}
.menu li:hover,
.menu li:focus,
.menu li:active,
.menu li:visited {
  background-color: #6441a5;
  a {
    color: #fff;
  }
}

.menu-open {
  visibility: visible;
  z-index: 2;
  background: #fff;
  border: 1px solid #b7b7b7;
}

.menu-hidden {
  visibility: hidden;
}
