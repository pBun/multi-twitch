@import "vendor/normalize";
@import "vendor/skeleton";
@import "vendor/loader";

/* # Global
================================================== */

html, body {
  height: 100%;
}

body {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  color: #32323e;
  font-family: 'Roboto', sans-serif;
  font-weight: 300;
  line-height: 1.2em;
}

label, legend {
  font-weight: 300;
}

a {
  text-decoration: none;
  color: #6441a5;
  border-bottom: 1px solid transparent;
  transition: border-color 0.2s ease-in-out;
  &:hover, &:focus {
    color: #6441a5;
    border-color: #6441a5;
  }
}

.embed-container {
  position: relative;
  overflow: hidden;
  height: 100%;
  iframe, object, embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
}

.image-wrapper img {
  width: 100%;
  display: block;
}

.error {
  color: #ff0033;
}

/* # Loader
================================================== */

.chart-wrapper {
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
}
.loader-walk {
  display: block;
}
.chart-errors {
  display: none;
}
.chart-ready {
  .chart-wrapper {
    opacity: 1;
  }
  .loader-walk {
    display: none;
  }
}
.chart-error {
  .chart-wrapper {
    display: none;
  }
  .chart-errors {
    display: block;
  }
}

/* # General layout
================================================== */

.main-wrapper {
  position: relative;
  text-align: center;
}

$chatWidth = 300px;
.multi-stream {
  padding-right: $chatWidth;
}
.streams, .stream-meta {
  height: 100vh;
  position: relative;
  float: left;
}
.streams {
  width: 100%;
}
.stream-meta {
  position: fixed;
  top: 0;
  right: 0;
  width: $chatWidth;
  box-sizing: border-box;
  border-left: 1px solid #d1d1d1;
}

/* # Tabs
================================================== */
.chat-panels {
  position: relative;
}
.react-tabs {
  position: relative;
  height: 100%;
  background-color: #d1d1d1;
}

.react-tabs [role=tablist] {
  border-bottom: 1px solid #d1d1d1;
  margin: 0;
  padding: 0;
  text-align: left;
}

.react-tabs [role=tab] {
  display: inline-block;
  border: 1px solid transparent;
  border-bottom: none;
  bottom: -1px;
  position: relative;
  list-style: none;
  cursor: pointer;
  position: relative;
  margin-bottom: 0;
  a:hover, a:active, a:focus {
    border-color: transparent;
  }
  .tab-inner {
    display: block;
    padding: 6px 20px 6px 12px;
  }
  .close {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    font-size: 0;
    &:after {
      font-size: 14px;
      content: 'x';
      margin-left: 5px;
      padding: 5px;
    }
  }
}

.react-tabs [role=tab][aria-selected=true] {
  background: #d1d1d1;
  border-color: #d1d1d1;
  font-weight: 600;
  // border-radius: 5px 5px 0 0;
}

.react-tabs [role=tab].active {
  outline: none;
}

.react-tabs [role=tabpanel] {
  position: absolute;
  background: #f2f2f2;
  width: 100%;
  height: 100%;
  display: none;
  &.active {
    display: block;
  }
}

/* # Stream
================================================== */

.stream .embed-container {
  height: 0;
  padding-top: 30px; /* IE6 workaround*/
  padding-bottom: 56.25%; /* 16/9 ratio */
}

/* # Stream Chat
================================================== */

.stream-chat {
  padding: 0;
  height: 100%;
}

/* # Search
================================================== */
.twitch-search {
  position: relative;
  margin: 1em;
  font-size: 150%;
  font-weight: 200;
  line-height: 1.5;
  max-width: 300px;
}

.twitch-search .input-text {
  color: #666;
  padding: 0.4em;
  width: 100%;
  margin: 0;
}

.twitch-search .menu {
  display: block;
  line-height: 1.5em;
  text-decoration: none;
  white-space: nowrap;
  width: 100%;
  position: absolute;
  margin-top: 0.25em;
  &.menu-open {
    visibility: visible;
    z-index: 2;
    background: #fff;
    border: 1px solid #d1d1d1;
  }
  &.menu-hidden {
    visibility: hidden;
  }
}

.twitch-search .menu ul {
  list-style-type: none;
  padding: 0em;
  margin: 0em;
}
.twitch-search .menu li {
  margin: 0;
  transition: background-color 0.2s ease-in-out;
  a {
    display: block;
    padding: 0.5em;
    transition: color 0.2s ease-in-out;
    &:hover, &:focus, &:active, &:visited {
      border-color: transparent;
    }
  }
  &.focus {
    background-color: #6441a5;
    a {
      color: #fff;
    }
  }
}

/* # Credits
================================================== */

.fork-me img {
  max-width: 33%
}

.author {
  position: absolute;
  bottom: 5px;
  right: 5px;
  z-index: 9999;
  color: #999;
  a {
    color: #999;
    &:hover, &:focus {
      border-color: #999;
    }
  }
  &:hover, &:focus {
    transition-timing-function: ease-out;
    opacity: 1;
  }
}

/* # Streams
================================================== */

.stream-embed {
  padding-bottom: 56.25%;
}
